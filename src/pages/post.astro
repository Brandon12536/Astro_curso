---
import { render } from "astro/dist/runtime/server";

//Mostrando datos de Backend
const response = await fetch("https://jsonplaceholder.typicode.com/posts"); //Await se usa ya que estamos trabajando de forma
//asíncrona lo cual el servidor procesa la información y mientras procesa la página puede realizar otras cosas.
const posts = await response.json();
//console.log(users)
---

<h1>Mis publicaciones</h1>

{
    posts.map((post) => (
        <div>
            <h5 style="color: red;">{post.userId}</h5>
            <h3 style="color: black;">{post.title}</h3>
            <p style="color: purple;">{post.body}</p>
        </div>
    ))
}

